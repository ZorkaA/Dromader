<!--Pitch ribbon-->
<animation>
 <type>rotate</type>
 <object-name>ribbon</object-name>
 <property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
 <offset-deg>7</offset-deg>
 <factor>-1.0</factor>
 <max-deg>35</max-deg>
 <min-deg>-35</min-deg>
  <center>
    <x-m>-0.095</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>ribbon_uv</object-name>
  <property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
  <offset-deg>7</offset-deg>
  <factor>-1.0</factor>
  <max-deg>35</max-deg>
  <min-deg>-35</min-deg>
  <center>
    <x-m>-0.095</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Needles-->
<animation>
  <type>translate</type>
  <object-name>pitch_needle</object-name>
  <property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
  <factor>0.0014</factor>
  <offset-m>-0.001</offset-m>
  <max-m>0.048</max-m>
  <min-m>-0.048</min-m>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
</animation>
<animation>
  <type>translate</type>
  <object-name>roll_needle</object-name>
  <property>/instrumentation/attitude-indicator/indicated-pitch-deg</property>
  <factor>0.0014</factor>
  <max-m>0.048</max-m>
  <min-m>-0.048</min-m>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>1.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>roll_needle</object-name>
  <property>/instrumentation/attitude-indicator/indicated-roll-deg</property>
  <factor>-1.0</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
