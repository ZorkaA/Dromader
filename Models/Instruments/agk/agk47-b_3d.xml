<!--Side slip-->
<animation>
  <type>rotate</type>
  <object-name>skid</object-name>
  <condition>
    <not>
     <property>/instrumentation/attitude-indicator/caged-flag</property>
    </not>
  </condition>
  <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
  <factor>-1.2</factor>
  <max-deg>7</max-deg>
  <min-deg>-7</min-deg>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.4</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Side slip with UV -->
<animation>
